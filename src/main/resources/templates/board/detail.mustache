{{> /layout/header}}

<div class="container p-5">
    <!-- 폼태그는 기본적으로 Get요청
        인서트 할때는 post 요청 enctype은 요청시 localhost:8080/board/save post로 요청됨
        title = 사용자입력값 & content=사용자값
    submit태그는 항상폼 안에 있어야한다.
폼태그의 역할 인풋에작성된걸 한번에 전송하려고. xwww는 왜쓰지? 이런거 면접에 다 나와-->
    <!-- 수정삭제버튼 -->
    {{#pageOwner}}
    <div class="d-flex justify-content-end">
        <a class="btn btn-warning me-1" href="/board/{{board.id}}/updateForm">수정</a>
        <form action="/board/{{board.id}}/delete" method="post">
            <button type="submit" class="btn btn-danger">삭제</button>
        </form>
    </div>
    {{/pageOwner}}

    <!-- 게시글내용 -->
    {{#board}}
    <div>
        <h2><b>{{title}}</b></h2>
        <hr />
        <div class="m-4 p-2">
            {{content}}
        </div>
    </div>
    {{/board}}

    <!-- 댓글 -->
    <div class="card mt-3">
        <!-- 댓글등록 -->
        <div class="card-body">
            <form action="/reply/save" method="post">
                <input type="hidden" name="boardId" value="{{board.id}}">
                <textarea class="form-control" rows="2" name="comment"></textarea>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-primary mt-1">댓글등록</button>
                </div>
            </form>
        </div>

        <!-- 댓글목록 -->
        <div class="card-footer">
            <b>댓글리스트</b>
        </div>
        <div class="list-group">

            <!-- 댓글아이템 -->
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div class="d-flex">
                    <div class="px-1 me-1 bg-primary text-white rounded">ssar</div>
                    <div>댓글 내용입니다</div>
                </div>
                <form action="/reply/1/delete" method="post">
                    <button class="btn">🗑</button>
                </form>
            </div>
        </div>
    </div>
</div>

{{> /layout/footer}}